@model IEnumerable<UI.Models.User.UserGetVM>

@{
    ViewData["Title"] = @Localizer["Users"];
}

<h1>@Localizer["Users"]</h1>

<p>
    <a asp-action="Create">@Localizer["Create a new User"]</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Joined)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                <img src="@item.Image" alt="@item.Username profile picture"
                     class="img-responsive" style="max-height: 150px">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Joined)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">@Localizer["Edit"]</a>   |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">@Localizer["Delete"]</a>
            </td>
        </tr>
}
    </tbody>
</table>
