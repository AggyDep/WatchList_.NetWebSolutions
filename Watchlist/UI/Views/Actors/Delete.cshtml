@model UI.Models.Actor.ActorDeleteVM

@{
    ViewData["Title"] = @Localizer["Delete"] + @Model.FullName;
}

<h1>@Localizer["Delete"] @Html.DisplayFor(model => model.FullName)</h1>

<h3>@Localizer["Are you sure you want to delete this actor?"]</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Localizer[@Html.DisplayNameFor(model => model.FullName)]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value=@Localizer["Delete"] class="btn btn-danger" /> |
        <a asp-action="Index">@Localizer["Back to List"]</a>
    </form>
</div>
